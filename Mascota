                                dinero -= 2;
                                pretzel++;
                                System.out.println("Has comprado un pretzel.");
                            } else {
                                System.out.println("No tienes suficiente dinero para comprar un pretzel, dinero: " + dinero);
                            }
                        }
                        else if (tienda.equals("Perrito") || tienda.equals("perrito")) {
                            if (dinero >= 3) {
                                dinero -= 3;
                                perrito++;
                                System.out.println("Has comprado un perrito.");
                            } else {
                                System.out.println("No tienes suficiente dinero para comprar un perrito, dinero: " + dinero);
                            }
                        }
                        System.out.println("El estado actual de " + nombreTamagotchi + " → Energía: " + energia + " | Hambre: " + hambre + " | Felicidad: " + felicidad + " | Dinero: " + dinero);

                        System.out.println("¿Qué desea hacer ahora?");
                        System.out.println("1. Dar de comer");
                        System.out.println("2. Dormir");
                        System.out.println("3. Jugar");
                        System.out.println("4. Tienda");
                        System.out.println("5. Estado");
                        System.out.println("6. Salir");
                        break;

                    case 5:
                        System.out.println("Bienvenido al estado, aquí puedes ver las estadísticas de tu mascota.");

                        if (felicidad > 7 && hambre > 4 && energia > 5 ) {
                            System.out.println(nombreTamagotchi + " esta feliz y activo.");
                        }
                        else if (hambre <= 3) {
                            System.out.println(nombreTamagotchi + " tiene hambre, deberías darle de comer");
                        }
                }




        }
    }
}


    }
