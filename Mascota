                        int dormir2 = sc.nextInt();
                        int dormir3 = sc.nextInt();
                        int dormir4 = sc.nextInt();
                        int dormir5 = sc.nextInt();
                        int dormir6 = sc.nextInt();
                        int dormir7 = sc.nextInt();
                        int dormir8 = sc.nextInt();
                        int dormir9 = sc.nextInt();
                        int dormir10 = sc.nextInt();

                        energia = energia + 4;
                        felicidad = felicidad - 1;

                        System.out.println("Genial!, ahora " + nombreTamagotchi + " tiene " + energia + " de energia.");
                        break;

                    case 3:
                        System.out.println("Escoge uno 1 si quieres jugar al PiedraPapelTijera y 2 si quires jugar a los dados.");

