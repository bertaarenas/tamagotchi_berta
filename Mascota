                            case 1:
                                System.out.println("Esto es el juego de piedra, papel o tijera, selecciona 1 al 3 dependiendo de tu elección.");
                                System.out.println("1 = piedra, 2 = papel y 3 = tijera");

                                int numeroEscogido = sc.nextInt();
                                int randomNum = (int) (Math.random() * 3) +1; //Va del 0 a 2

                                //Comienza
                                switch (numeroEscogido) {
                                    case 1: // Piedra
                                        switch (randomNum) {
                                            case 1: // Piedra
                                                System.out.println("número random: "+ randomNum);
                                                System.out.println("Empate!");
                                                break;
                                            case 2: // Papel
                                                System.out.println("número random: "+ randomNum);
                                                System.out.println("Has perdido.");
                                                break;
                                            case 3: //Tijera
                                                System.out.println("número random: "+ randomNum);
                                                System.out.println("Has ganado!");
                                                break;
                                        }
                                        break;
                                    case 2: //Papel
                                        switch (randomNum) {
                                            case 1: // Piedra
                                                System.out.println("número random: "+ randomNum);
                                                System.out.println("Has ganado!");
                                                break;
                                            case 2: // Papel
                                                System.out.println("número random: "+ randomNum);
                                                System.out.println("Empate!");
                                                break;
                                            case 3: //Tijera
                                                System.out.println("número random: "+ randomNum);
                                                System.out.println("Has perdido.");
                                                break;
                                        }
                                        break;
                                    case 3: //Tijera
                                        switch (randomNum) {
                                            case 1: // Piedra
                                                System.out.println("número random: "+randomNum);
                                                System.out.println("Has perdido.");
                                                break;
                                            case 2: // Papel
                                                System.out.println("número random: "+ randomNum);
                                                System.out.println("Has ganado!");
                                                break;
                                            case 3: //Tijera
                                                System.out.println("número random: "+ randomNum);
                                                System.out.println("Empate!");
                                                break;
                                        }
                                        break;
                                }

                            case 2:
                                System.out.println("Estas en el juego de los dados");
                                System.out.println("A continuación se tiraran dos dados, si gana el jugador obtendra +2 de felicidad, +3 monedas -2 energia, en cambio si pierde, pierde -1 de felicidad.");

                                int dadoTamagotchi = (int) (Math.random() * 6) +1;
                                int dadoJugador = (int)(Math.random() * 6) +1;

                                System.out.println("El número de " + nombreTamagotchi + " es " + dadoTamagotchi);
                                System.out.println("El número del jugador es " + dadoJugador);

                                if (dadoTamagotchi > dadoJugador) {
                                    felicidad -= 1;
                                    System.out.println("Perdiste.");
                                }
                                else if (dadoJugador > dadoTamagotchi) {
                                    felicidad += 2;
                                    dinero += 3;
                                    energia -= 2;

                                    System.out.println("Has ganado.");

                                }



                        }
                }
                        }
                }


            }

        }
    }
}